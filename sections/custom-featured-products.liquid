{{ 'custom-featured-products.css' | asset_url | stylesheet_tag }}

<section class="featured-products-section">
  <div class="container">
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    
    <div class="products-grid">
      {%- liquid
        assign collection = collections[section.settings.collection]
        assign product_limit = section.settings.products_to_show | default: 4
      -%}
      
      {% if collection != blank %}
        {% for product in collection.products limit: product_limit %}
          {% render 'custom-product-card', product: product %}
        {% endfor %}
      {% else %}
        {% comment %} Fallback to all products if no collection selected {% endcomment %}
        {% for product in collections.all.products limit: product_limit %}
          {% render 'custom-product-card', product: product %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Featured Items"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Number of products to show",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
