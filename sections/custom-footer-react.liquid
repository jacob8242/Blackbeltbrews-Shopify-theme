{{ 'custom-footer.css' | asset_url | stylesheet_tag }}

{%- comment -%} Footer - Exact React Footer.tsx classes {%- endcomment -%}
<footer class="bg-gray-800 text-white">
  <div class="container mx-auto px-4 md:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="md:col-span-1">
        <h2 class="font-bebas text-4xl tracking-wider mb-2">Black Belt Brews</h2>
        <p class="text-gray-400 text-sm">Brew like a master. Focus like a fighter.</p>
        <div class="flex gap-4 mt-4">
          <a href="https://facebook.com" class="text-gray-300 hover:text-white"><i class="ri-facebook-fill text-xl"></i></a>
          <a href="https://instagram.com" class="text-gray-300 hover:text-white"><i class="ri-instagram-fill text-xl"></i></a>
          <a href="https://twitter.com" class="text-gray-300 hover:text-white"><i class="ri-twitter-x-fill text-xl"></i></a>
        </div>
      </div>
      <div>
        <h3 class="font-bebas text-2xl tracking-wider mb-4">SHOP</h3>
        <ul class="space-y-2 text-gray-300">
          <li><a href="/collections/ground-coffee" class="hover:text-white">Ground Coffee</a></li>
          <li><a href="/collections/k-cups" class="hover:text-white">K-Cups</a></li>
          <li><a href="/collections/tea" class="hover:text-white">Tea</a></li>
          <li><a href="/collections/merch" class="hover:text-white">Merch</a></li>
        </ul>
      </div>
      <div>
        <h3 class="font-bebas text-2xl tracking-wider mb-4">LINKS</h3>
        <ul class="space-y-2 text-gray-300">
          <li><a href="/pages/about" class="hover:text-white">Our Story</a></li>
          <li><a href="/pages/contact" class="hover:text-white">Connect</a></li>
          <li><a href="/pages/about" class="hover:text-white">Our Mission</a></li>
          <li><a href="/pages/subscriptions" class="hover:text-white">Subscriptions</a></li>
        </ul>
      </div>
      <div>
        <h3 class="font-bebas text-2xl tracking-wider mb-4">CONTACT</h3>
        <address class="not-italic text-gray-300 space-y-2">
          <p>13791 Oneida Dr, Delray Beach, FL 33410</p>
          <p><a href="mailto:blackbeltbrews12@gmail.com" class="hover:text-white">blackbeltbrews12@gmail.com</a></p>
          <p><a href="tel:+15619452520" class="hover:text-white">(561) 945-2520</a></p>
        </address>
        
        {%- comment -%} Follow on Shop button {%- endcomment -%}
        <div class="mt-4">
          {{ shop | login_button: action: 'follow' }}
        </div>
        
        {%- comment -%} Payment methods {%- endcomment -%}
        {%- if shop.enabled_payment_types.size > 0 -%}
          <div class="mt-4">
            <p class="text-gray-400 text-xs mb-2">We accept:</p>
            <div class="flex gap-2 flex-wrap">
              {%- for type in shop.enabled_payment_types -%}
                <span class="text-gray-400 text-xs">{{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}</span>
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="mt-12 pt-8 border-t border-gray-700 text-center text-gray-500 text-sm">
      <p>&copy; {{ 'now' | date: '%Y' }} Black Belt Brews Co. All Rights Reserved.</p>
    </div>
  </div>
</footer>

